<%= form_for(@event) do |f| %>
  <fieldset>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <label class="col-md-4 control-label" for="dex_number">Pok√©mon:</label>
    <div class="col-md-8">
      <select class="form-control" name="event[dex_number]" id="event_dex_number">
        <% @pokemons.each do |pokemon| %>
          <option value="<%= pokemon['dex_number'] %>"><%= pokemon["name"] %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :coords, class: "col-md-4 control-label" %><br>
    <div class="col-md-8">
      <%= f.text_field :coords, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :level_min, "Minimum Level", class: "col-md-4 control-label" %><br>
    <div class="col-md-8">
      <%= f.number_field :level_min, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :level_max, "Maximum Level", class: "col-md-4 control-label" %><br>
    <div class="col-md-8">
      <%= f.number_field :level_max, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <div class="col-md-12">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
  </fieldset>
<% end %>
