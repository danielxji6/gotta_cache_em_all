<section id='signup-form' class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for @user do |f| %>
        <fieldset>
          <legend>Signup</legend>

          <div class="form-group">
            <label class="col-md-4 control-label" for="full_name">Full name:</label>
            <div class="col-md-8">
              <%= f.text_field :full_name, required: true, placeholder: "First Name", class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="username">Username:</label>
            <div class="col-md-8">
              <%= f.text_field :username, required: true, placeholder: "user123", class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="email">Email address:</label>
            <div class="col-md-8">
              <%= f.text_field :email, required: true, placeholder: "name@example.com", class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="password">Password</label>
            <div class="col-md-8">
              <%= f.password_field :password, required: true, placeholder: "Password", class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Sign up", class: "btn btn-success" %>
            </div>
          </div>

        </fieldset>
      <% end %>

    </div>
  </div>
</section>
