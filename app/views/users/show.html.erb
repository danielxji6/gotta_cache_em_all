<div class='users centered'>
	<div class='container'>

		<h1>Welcome <%= @user.full_name.capitalize %></h1>
		<p><%= @user.email %></p>

		<p class="small text-muted">Joined <%= time_ago_in_words(@user.created_at) %> ago</p>
		<% if @current_user == @user %>
			<%= link_to "Edit Team", edit_user_path(current_user), class: "btn btn-success" %>
		<% end %>


	</div>
	<div class='container'>
		<h2>My Team</h2>
		<div id='my_team'>
			<div class='row'>
				<% @team.each do |pokemon| %>
					<div class='col-sm-2 col-xs-4'>
						<%= link_to image_tag(pokemon.event.image, size: "100"), pokemon_path(current_user, pokemon) %><br>
						<p><%= pokemon.event.name %></p>
					</div>
				<% end %>
				<% (@team.size+1..6).each do |n| %>
					<div class='col-sm-2 col-xs-4'>
						<%= image_tag "", size: "100"%><br>
						<p>Empty</p>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<hr>
	<div class="container">
		<h2>My Back Pack</h2>
		<div id="my_backpack">
			<div class="row">
				
				<% @pokemons.each do |pokemon| %>
					<% if !pokemon.team_position %>
						<div class='col-sm-2 col-xs-3'>
							<%= link_to image_tag(pokemon.event.image, size: "100"), pokemon_path(current_user, pokemon) %><br>
							<p><%= pokemon.event.name %></p>
						</div>
					<% end %>
				<%end%>

			</div>
		</div>
	</div>
</div>